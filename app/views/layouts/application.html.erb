<!DOCTYPE html>
<html>
  <head>
    <title> Ian Matthews - Web Developer </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header id="main_navigation" class="clearfix">
        <%= link_to "Ian Matthews", root_path, class: "name" %> 

        <nav>
            <%= link_to "Articles", posts_path %>              
            <%= link_to "Projects", projects_path  %>              
            <%= link_to "Contact", new_contact_path  %>  
            <% if user_signed_in? %>            
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete  %>  
            <% end %>    

            
        </nav>
    </header>
    
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>

     <footer id="main_footer">
                <nav>
                    <a href="https://github.com/imatthews009" target="_blank"><i class="fa fa-github"></i></a>
                    <a href="https://www.linkedin.com/in/ian-w-matthews/" target="_blank"><i class="fa fa-linkedin"></i></a>
                </nav>
                
            </footer>
  </body>
</html>

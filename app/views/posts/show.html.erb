<div id="post_show_content" class="skinny_wrapper">
                <header>
                    <p class="date"><%= @post.created_at.strftime('%A, %B, %d')%></p>
                    <h1><%= @post.title %></h1>
                    <hr>
                </header>
                <div id="content">
                    <p><%= @post.content %></p>
                </div>

                <hr>
                
                <div id="share_box">


                    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @IanWMatthews - ', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a onclick="javascript:window.open('http://facebook.com/share?php?u= - ', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a onclick="javascript:window.open('http://plus.google.com/share?php?u= - ', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>

                <hr>
            </div>






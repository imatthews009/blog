<div id="post_show_content" class="skinny_wrapper">
                <header>
                    <p class="date"><%= @post.created_at.strftime('%A, %B, %d')%></p>
                    <h1><%= @post.title %></h1>
                    <hr>
                </header>
                <div id="content">
                    <p><%= markdown(@post.content) %></p>
                </div>

                <hr>
                
                <div id="share_box">


                    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @IanWMatthews - <%url_for([@post, {only_path:false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
                          <i class="fa fa-twitter"></i></i>
                        </a>
                    <a onclick="javascript:window.open('http://facebook.com/share?php?u= - ', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <a onclick="javascript:window.open('http://plus.google.com/share?php?u= - ', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>

                <hr>

                <%= render'disqus' %>
            </div>




<%= link_to "Edit", edit_post_path(@post) %>

<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
